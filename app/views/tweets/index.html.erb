<% if @brow %>
<div class="crumbs">
  <div><%= link_to "Politwoops", root_path %> Â»</div>
  <% if @query %>
    <div>Deleted Tweets mentioning '<%= @query %>'</div>
  <% elsif @state %>
    <div>Deleted Tweets from <%= Politician::STATES[@state.to_sym] %> politicians</div>
  <% end %>
